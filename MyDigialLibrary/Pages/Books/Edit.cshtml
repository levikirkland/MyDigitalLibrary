@page "{id:int}"
@model MyDigitalLibrary.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container py-4">
    <h2>Edit Book</h2>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-3 mb-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ExistingCoverPath))
                {
                    <img src="@Model.ExistingCoverPath" alt="cover" class="img-fluid rounded cover-full" />
                }
                else
                {
                    <div class="no-cover-placeholder mx-auto">
                        <div class="h5 text-muted">No cover</div>
                    </div>
                }

                <div class="mt-3">
                    <label class="form-label">Replace Cover (optional)</label>
                    <input asp-for="Cover" type="file" class="form-control" />
                </div>
            </div>

            <div class="col-md-9">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Authors" class="form-label">Authors</label>
                    <input asp-for="Authors" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                </div>

                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="Publisher" class="form-label">Publisher</label>
                        <input asp-for="Publisher" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Isbn" class="form-label">ISBN</label>
                        <input asp-for="Isbn" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="PublishedAt" class="form-label">Published Date</label>
                        <input asp-for="PublishedAt" type="date" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Language" class="form-label">Language</label>
                        <input asp-for="Language" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Series" class="form-label">Series Name</label>
                        <input asp-for="Series" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="SeriesIndex" class="form-label">Series Index</label>
                        <input asp-for="SeriesIndex" type="number" step="0.1" class="form-control" />
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Rating" class="form-label">Rating (1-5)</label>
                        <input asp-for="Rating" type="number" min="0" max="5" class="form-control" />
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Tags" class="form-label">Tags (comma separated)</label>
                        <input asp-for="Tags" class="form-control" />
                    </div>
                </div>

                <hr class="my-3" />

                <h5>Reading Progress</h5>
                <div class="row g-3 align-items-end">
                    <div class="col-sm-4">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="unread">Unread</option>
                            <option value="reading">Reading</option>
                            <option value="read">Read</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label asp-for="ProgressPercent" class="form-label">Progress %</label>
                        <input asp-for="ProgressPercent" type="number" min="0" max="100" class="form-control" />
                    </div>
                    <div class="col-sm-4">
                        <label asp-for="Rating" class="form-label d-block">Rating Preview</label>
                        <div class="text-muted">@Model.Rating ?? 0</div>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="CurrentPage" class="form-label">Current Page</label>
                        <input asp-for="CurrentPage" type="number" min="0" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="TotalPages" class="form-label">Total Pages</label>
                        <input asp-for="TotalPages" type="number" min="0" class="form-control" />
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="StartedAt" class="form-label">Started At</label>
                        <input asp-for="StartedAt" type="datetime-local" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="FinishedAt" class="form-label">Finished At</label>
                        <input asp-for="FinishedAt" type="datetime-local" class="form-control" />
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary ms-2" href="/Books">Cancel</a>
                </div>

                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
                }

                @if (Model.Success)
                {
                    <div class="alert alert-success mt-3">Saved. <a href="/Books">Return to library</a></div>
                }
            </div>
        </div>
    </form>
</div>
