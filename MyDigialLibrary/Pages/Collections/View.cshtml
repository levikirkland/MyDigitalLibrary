@page "{id:int}"
@model MyDigitalLibrary.Pages.Collections.ViewModel
@{
    ViewData["Title"] = "Collection";
}

<div class="container-fluid py-4 collection-list">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">@Model.Collection?.Name</h3>
        <div>
            <a class="btn btn-outline-secondary" href="/Collections">Back</a>
        </div>
    </div>

    <div>
        <h5 class="mb-3">Books in this collection</h5>
        @if (Model.Books?.Any() == true)
        {
            <div id="books-accordion" class="table-responsive">
                <table class="table table-hover align-middle w-100">
                    <thead class="table-light small text-muted">
                        <tr>
                            <th>Title</th>
                            <th>Cover</th>
                            <th>Author</th>
                            <th>Series</th>
                            <th>Tags</th>
                            <th>Rating</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.Books)
                        {
                            var cover = string.IsNullOrEmpty(b.CoverUrl) ? "https://via.placeholder.com/60x90.png?text=Cover" : b.CoverUrl;
                            var tags = string.IsNullOrWhiteSpace(b.Tags) ? null : b.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries).Select(t => t.Trim()).Where(t => !string.IsNullOrEmpty(t)).Take(3).ToArray();

                            // prepare truncated plain-text description (100 words)
                            var plainDesc = string.Empty;
                            if (!string.IsNullOrEmpty(b.Description))
                            {
                                plainDesc = System.Text.RegularExpressions.Regex.Replace(b.Description, "<.*?>", string.Empty);
                                var words = plainDesc.Split((char[])null, StringSplitOptions.RemoveEmptyEntries);
                                if (words.Length > 100)
                                {
                                    plainDesc = string.Join(' ', words.Take(100)) + "…";
                                }
                            }

                            <tr>
                                <td class="align-middle">
                                    <div class="fw-semibold">@b.Title</div>
                                    <div class="text-muted small">@b.Publisher @if(!string.IsNullOrEmpty(b.PublishedAt)){ <span>&middot; @Model.FormatDateShort(b.PublishedAt)</span> }</div>
                                </td>
                                <td style="width:72px;"><img src="@cover" class="cover-thumb" alt="Cover" loading="lazy" onerror="this.onerror=null;this.src='https://via.placeholder.com/60x90.png?text=Cover'" /></td>
                                <td class="text-muted">@(string.IsNullOrEmpty(b.Authors) ? "-" : b.Authors)</td>
                                <td class="text-muted">@(string.IsNullOrEmpty(b.Series) ? "-" : b.Series)</td>
                                <td>
                                    @if (tags != null && tags.Length > 0)
                                    {
                                        foreach (var t in tags)
                                        {
                                            <span class="badge bg-light text-dark me-1">@t</span>
                                        }
                                    }
                                    else { <span class="text-muted">-</span> }
                                </td>
                                <td>
                                    @if (b.Rating != null)
                                    {
                                        var full = (int)(b.Rating ?? 0);
                                        for (int i = 0; i < 5; i++)
                                        {
                                            if (i < full) { <i class="fa-solid fa-star text-warning"></i> }
                                            else { <i class="fa-regular fa-star text-warning"></i> }
                                        }
                                        <span class="ms-1">@((b.Rating ?? 0))/5</span>
                                    }
                                    else { <span class="text-muted">-</span> }
                                </td>
                                <td>
                                    <span class="badge @(string.Equals(b.Status, "read", StringComparison.OrdinalIgnoreCase) ? "bg-success" : string.Equals(b.Status, "reading", StringComparison.OrdinalIgnoreCase) ? "bg-primary" : "bg-secondary")">@(string.IsNullOrEmpty(b.Status) ? "Unread" : b.Status)</span>
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-1" href="/Books/Read/@b.Id">Read</a>
                                    <a class="btn btn-sm btn-outline-secondary me-1" href="/Books/View/@b.Id">Details</a>
                                    <button class="btn btn-sm btn-light collapse-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#desc-@b.Id" aria-expanded="false" aria-controls="desc-@b.Id">
                                        <i class="fa-solid fa-chevron-down collapse-icon"></i>
                                    </button>
                                </td>
                            </tr>

                            <tr class="description-row">
                                <td colspan="8" style="padding-top:0; padding-bottom:0; border-top:0;">
                                    <div class="collapse" id="desc-@b.Id" data-bs-parent="#books-accordion">
                                        <div class="p-3 bg-light small">
                                            @if (!string.IsNullOrEmpty(plainDesc))
                                            {
                                                @plainDesc
                                                <div class="mt-2"><a href="/Books/View/@b.Id">Read more</a></div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No description available.</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-muted">No books in this collection yet.</div>
        }
    </div>
</div>

@section Scripts {
    <script>
        (function(){
            // toggle rotate on collapse show/hide
            var accordion = document.getElementById('books-accordion');
            if (!accordion) return;
            accordion.addEventListener('shown.bs.collapse', function(e){
                var id = e.target ? e.target.id : null;
                if (!id) return;
                var btn = accordion.querySelector('[data-bs-target="#' + id + '"]');
                if (btn) {
                    var icon = btn.querySelector('.collapse-icon');
                    if (icon) icon.classList.add('rotate');
                }
            });
            accordion.addEventListener('hidden.bs.collapse', function(e){
                var id = e.target ? e.target.id : null;
                if (!id) return;
                var btn = accordion.querySelector('[data-bs-target="#' + id + '"]');
                if (btn) {
                    var icon = btn.querySelector('.collapse-icon');
                    if (icon) icon.classList.remove('rotate');
                }
            });
        })();
    </script>
}
