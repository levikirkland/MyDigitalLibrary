@page
@model MyDigitalLibrary.Core.Pages.Jobs.IndexModel
@{
    ViewData["Title"] = "Jobs";
}

<div class="container py-4">
    <h2>Your Jobs</h2>

    @if (Model.Jobs == null || !Model.Jobs.Any())
    {
        <div class="alert alert-info">No jobs yet.</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>JobId</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Progress</th>
                    <th>Created</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var j in Model.Jobs)
                {
                    <tr>
                        <td>@j.JobId</td>
                        <td>@j.JobType</td>
                        <td>@j.Status</td>
                        <td>@(j.Progress ?? 0)%</td>
                        <td>@j.CreatedAt.ToLocalTime()</td>
                        <td>@j.Error</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>