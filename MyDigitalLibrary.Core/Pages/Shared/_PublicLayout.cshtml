<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyDigitalLibrary</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">
    <header class="bg-white border-bottom">
        <nav class="container d-flex align-items-center justify-content-between py-3">
            @await Html.PartialAsync("_BrandPartial")

            <div>
                <a class="btn btn-outline-primary btn-sm me-2" href="~/Account/Login">Sign in</a>
                <a class="btn btn-primary btn-sm" href="~/Account/Register">Sign up</a>
            </div>
        </nav>
    </header>

    <!-- Hero -->
    <section class="bg-white">
        <div class="container py-5 text-center">
            <h1 class="display-4 mb-3">Organize, read and share your digital library</h1>
            <p class="lead text-muted mb-4">Import your Calibre library, read EPUBs in-browser, manage collections and write reviews.</p>
            <p>
                <a class="btn btn-primary btn-lg me-2" href="~/Account/Register">Get started</a>
                <a class="btn btn-outline-primary btn-lg" href="~/About">Learn more</a>
            </p>
        </div>
    </section>

    <main class="container py-4">
        @RenderBody()
    </main>

    @await Html.PartialAsync("_FooterPartial")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>