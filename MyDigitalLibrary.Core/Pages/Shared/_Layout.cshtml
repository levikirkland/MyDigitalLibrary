<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyDigitalLIbrary</title>

    <!-- Bootstrap 5 CSS -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5/dist/litera/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-light">
    <a class="visually-hidden-focusable" href="#main">Skip to main content</a>

    <header class="bg-white shadow-sm">
        @await Html.PartialAsync("_TopNavPartial")
    </header>

    <main id="main" role="main" class="container py-4">
        @RenderBody()
    </main>

    @await Html.PartialAsync("_FooterPartial")

    <!-- Bootstrap JS bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @await RenderSectionAsync("Footer", required: false)
</body>

</html>