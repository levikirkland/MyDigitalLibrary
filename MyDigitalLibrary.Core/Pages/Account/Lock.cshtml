@page
@model MyDigitalLibrary.Core.Pages.Account.LockModel
@{
    Layout = "_LockLayout";
    ViewData["Title"] = "Locked";
}

<style>
.lock-backdrop { background: linear-gradient(180deg, rgba(245,248,250,1) 0%, rgba(238,242,245,1) 100%); min-height: 70vh; }
.lock-card { max-width:420px; width:100%; border-radius:12px; }
.brand-large { font-size:1.25rem; font-weight:700; }
.brand-sub { font-size:.9rem; color: #6f7a85; }
</style>

<div class="lock-backdrop d-flex align-items-center justify-content-center py-5">
    <div class="card lock-card shadow-sm p-4">
        <div class="d-flex align-items-center mb-3">
            <div class="me-3">
                <i class="fa-solid fa-book-open fa-2x text-primary"></i>
            </div>
            <div>
                <div class="brand-large">My Digital Library</div>
                <div class="brand-sub">Screen locked</div>
            </div>
        </div>

        <div class="text-center mb-3">
            <div class="fw-semibold">@Model.DisplayName</div>
            <div class="text-muted small">Your session is active. Enter your password to unlock.</div>
        </div>

        <form method="post" asp-page-handler="Unlock">
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter your password" required />
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">Unlock</button>
                <a class="btn btn-outline-secondary" href="/Account/Logout">Logout</a>
            </div>
        </form>

        <div class="mt-3 text-center small text-muted">
            If you forgot your password, use the account recovery link on the login page.
        </div>
    </div>
</div>