@page
@model MyDigitalLibrary.Core.Pages.Collections.EditModel
@{
    ViewData["Title"] = Model.Id.HasValue ? "Edit Collection" : "New Collection";
}

<div class="container py-4">
    <h3>@ViewData["Title"]</h3>

    <form method="post" id="collectionForm">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsSmart" class="form-check-input" id="isSmart" />
            <label class="form-check-label" for="isSmart">Smart collection</label>
        </div>

        <div id="smartRules" class="@(Model.IsSmart ? string.Empty : "d-none")">
            <div class="mb-2 small text-muted">Rules</div>
            <div class="row g-2">
                <div class="col-6">
                    <label class="form-label">Reading status</label>
                    <select asp-for="Status" class="form-select form-select-sm">
                        <option value="any">Any</option>
                        <option value="unread">Unread</option>
                        <option value="reading">Reading</option>
                        <option value="read">Read</option>
                    </select>
                </div>
                <div class="col-6">
                    <label class="form-label">Rating filter</label>
                    <div class="input-group input-group-sm">
                        <select asp-for="RatingOperator" class="form-select form-select-sm">
                            <option value="">No rating filter</option>
                            <option value=">=">At least</option>
                            <option value="<=">At most</option>
                            <option value="=">Exactly</option>
                            <option value="null">No rating</option>
                        </select>
                        <input asp-for="RatingValue" type="number" min="1" max="5" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">Tags (comma-separated)</label>
                    <input asp-for="Tags" class="form-control form-control-sm" />
                </div>
                <div class="col-12">
                    <label class="form-label">Series contains</label>
                    <input asp-for="Series" class="form-control form-control-sm" />
                </div>
            </div>

            <div class="mt-3">
                <button type="button" id="previewBtn" class="btn btn-outline-secondary btn-sm">Preview</button>
            </div>

            <div id="previewPanel" class="border rounded p-3 mt-3 d-none">
                <div class="d-flex align-items-center justify-content-between mb-2">
                  <div class="small fw-semibold">Preview (top 20 matches)</div>
                  <div>
                    <button type="button" id="refreshPreview" class="btn btn-sm btn-outline-secondary">Refresh</button>
                  </div>
                </div>
                <div id="previewResults" class="row g-2" style="max-height:360px; overflow:auto;"></div>
            </div>
        </div>

        @if (Model.ExistingRules.Any())
        {
            <hr />
            <div class="mb-2 small text-muted">Existing rules</div>
            <ul class="list-group mb-3">
                @foreach(var r in Model.ExistingRules)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>@r.RuleType : @r.RuleValue</div>
                        <form method="post" asp-page-handler="DeleteRule" asp-route-ruleId="@r.Id" onsubmit="return confirm('Remove this rule?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                        </form>
                    </li>
                }
            </ul>
        }

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>
            <a class="btn btn-secondary ms-2" href="/Collections/Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
    (function(){
        var isSmart = document.getElementById('isSmart');
        var wrap = document.getElementById('smartRules');
        var preview = document.getElementById('previewPanel');
        var results = document.getElementById('previewResults');

        function toggle(){ wrap.classList.toggle('d-none', !isSmart.checked); }
        isSmart.addEventListener('change', toggle);

        function escapeHtml(s){ if(!s) return ''; return s.replaceAll('&','&amp;').replaceAll('<','&lt;').replaceAll('>','&gt;'); }

        async function renderPreview(items){
            preview.classList.toggle('d-none', !(items && items.length));
            results.innerHTML = '';
            if(!items || items.length===0){ results.innerHTML = '<div class="text-muted p-4">No matches</div>'; return; }
            items.forEach(function(it){
                var col = document.createElement('div');
                col.className = 'col-12';
                col.innerHTML = `
                    <div class="d-flex gap-2 align-items-center">
                        <div style="width:48px;height:72px;background:#f6f8fb;border-radius:6px;overflow:hidden;flex:0 0 48px;">
                          ${it.cover ? `<img src="${it.cover}" style="width:100%;height:100%;object-fit:cover;"/>` : '<div style="width:48px;height:72px;display:flex;align-items:center;justify-content:center;color:#9aa;">No</div>'}
                        </div>
                        <div>
                          <div class="fw-semibold">${escapeHtml(it.title)}</div>
                          <div class="small text-muted">${escapeHtml(it.authors||'-')}</div>
                        </div>
                    </div>
                `;
                results.appendChild(col);
            });
        }

        async function fetchPreview(){
            if(!isSmart.checked) return;
            var fd = new FormData(document.getElementById('collectionForm'));
            var resp = await fetch(location.pathname + '?handler=Preview', { method: 'POST', body: fd, credentials: 'same-origin' });
            if (!resp.ok) { console.warn('Preview failed'); return; }
            var data = await resp.json();
            renderPreview(data);
        }

        document.getElementById('previewBtn').addEventListener('click', fetchPreview);
        document.getElementById('refreshPreview').addEventListener('click', fetchPreview);
    })();
    </script>
}
