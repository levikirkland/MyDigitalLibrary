@page "{id:int}"
@model MyDigitalLibrary.Core.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit Book";
}

<style>
    .star-rating { display:flex; align-items:center; gap:4px; }
    .star-rating .star-input { display:none; }
    .star-rating .star-label { font-size:1.4rem; cursor:pointer; color:#ccc; }
    .star-rating .star-label.active { color:#f5c518; }
</style>

<div class="container py-4">
    <h2>Edit Book</h2>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Authors</label>
                    <input asp-for="Authors" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                </div>

                <h5>Metadata</h5>
                <div class="row g-2">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Publisher</label>
                        <input asp-for="Publisher" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">ISBN</label>
                        <input asp-for="Isbn" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Published</label>
                        <input asp-for="PublishedAt" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Language</label>
                        <input asp-for="Language" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-2">
                        <label class="form-label">Total Pages</label>
                        <input asp-for="TotalPages" type="number" class="form-control" />
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary ms-2" href="/Books">Cancel</a>
                    @if (Model.GoogleImportEnabled)
                    {
                        <a class="btn btn-outline-primary ms-2" href="/Books/MetadataLookup?bookId=@Model.Id">Import metadata</a>
                    }
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <div class="mb-2">
                            <img src="@(Model.ExistingCoverPath ?? "/images/placeholder-book.png")" alt="cover" style="max-width:100%;height:auto;" />
                        </div>
                        <div class="mb-2">
                            <input asp-for="Cover" type="file" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

@section Scripts {
}
