@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="login-page" role="main">
  <main class="card" aria-labelledby="welcomeTitle">
    <div class="brand">
      <!-- Inline SVG brand keeps page self-contained -->
      <svg class="brand-logo" width="40" height="40" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <rect rx="4" width="24" height="24" fill="#0f172a"></rect>
        <path d="M6 8h12v2H6zM6 11h12v2H6zM6 14h8v2H6z" fill="#fff"></path>
      </svg>
      <div>
        <h1 id="welcomeTitle">Welcome back</h1>
        <p class="muted">Sign in to access your digital library</p>
      </div>
    </div>

    <form id="loginForm" class="form" novalidate onsubmit="handleLogin(event)" aria-describedby="formHelp">
      <div class="input-group">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" inputmode="email" placeholder="you@example.com" required aria-required="true" />
        <span class="error" id="emailError" aria-live="polite"></span>
      </div>

      <div class="input-group">
        <label for="password">Password</label>
        <div class="password-wrap">
          <input id="password" name="password" type="password" placeholder="••••••••" required minlength="8" aria-required="true" />
          <button type="button" class="toggle" aria-label="Show password" onclick="togglePassword(this)">Show</button>
        </div>
        <span class="error" id="passwordError" aria-live="polite"></span>
      </div>

      <div class="options">
        <label class="remember">
          <input type="checkbox" id="remember" name="remember" />
          Remember me
        </label>
        <a class="forgot" href="#" onclick="event.preventDefault(); alert('Password reset flow (UI only)');">Forgot password?</a>
      </div>

      <button class="primary" id="submitBtn" type="submit" aria-live="polite">Sign in</button>

      <div class="divider"><span>or continue with</span></div>

      <div class="socials" role="region" aria-label="Third party sign in">
        <button type="button" class="social google" onclick="socialStub('Google')">Sign in with Google</button>
        <button type="button" class="social microsoft" onclick="socialStub('Microsoft')">Sign in with Microsoft</button>
      </div>

      <div id="formHelp" class="muted small">Your credentials are only used to authenticate you in this demo UI.</div>
    </form>

    <footer class="signup">
      <span>Don't have an account?</span> <a href="#" onclick="event.preventDefault(); alert('Create account (UI only)')">Create one</a>
    </footer>
  </main>

  <!-- unobtrusive toast for status -->
  <div id="toast" class="toast" role="status" aria-live="polite"></div>
</div>

@section Styles {
<link rel="stylesheet" href="~/css/login.css" />
}

@section Scripts {
<script src="~/js/login.js"></script>
}